{
  "name": "font-converter",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "mkdir -p ./bundle; ln -nf ./src/*.html ./bundle; ln -nf ./src/*.css ./bundle; ln -sf ../fonts ./bundle/; ln -sf ../icons ./bundle/",
    "serve": "npm run prepare; npx esbuild --bundle ./src/index.js --outdir=./bundle --servedir=./bundle --watch",
    "bundle": "npm run prepare; npx esbuild --bundle ./src/index.js --outdir=./bundle"
  },
  "author": "Alexander K",
  "license": "GPL-3.0",
  "dependencies": {
    "opentype.js": "^1.3.4"
  },
  "devDependencies": {
    "esbuild": "^0.25.0"
  }
}
